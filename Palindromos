#include <iostream>
#include <string>
#include <algorithm>
using namespace std;

int main() {
    string palabra;
    cout << "Ingresa una palabra: ";
    cin >> palabra;

    string invertida = palabra;
    reverse(invertida.begin(), invertida.end());

    if (palabra == invertida) {
        cout << palabra << " es un palíndromo." << endl;
    } else {
        cout << palabra << " no es un palíndromo." << endl;
    }
    return 0;
}
