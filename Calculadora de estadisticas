#include <iostream>
#include <vector>
#include <numeric>
#include <algorithm>
using namespace std;

int main() {
    vector<int> numeros;
    int num;
    cout << "Ingrese numeros (0 para terminar): ";
    while (cin >> num && num != 0) {
        numeros.push_back(num);
    }
    
    int minimo = *min_element(numeros.begin(), numeros.end());
    int maximo = *max_element(numeros.begin(), numeros.end());
    double promedio = accumulate(numeros.begin(), numeros.end(), 0.0) / numeros.size();
    int suma = accumulate(numeros.begin(), numeros.end(), 0);
    
    cout << "Mínimo: " << minimo << endl;
    cout << "Máximo: " << maximo << endl;
    cout << "Promedio: " << promedio << endl;
    cout << "Suma: " << suma << endl;

    return 0;
}
